@model List<EmployeeManagement.Infrastructure.Entity.Employee>

@{
    ViewBag.Title = "Index";
}

<h2>List of Employees</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().Address.Street)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().Address.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().Address.LandMark)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().Address.PinCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().EmpCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().Designation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().DOB)
        </th>
        <th>
            Actions
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address.Street)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address.LandMark)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address.PinCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmpCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Designation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DOB)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
